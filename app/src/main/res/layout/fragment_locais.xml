<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.LocaisFragment">

    <TextView
        android:id="@+id/bannerLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locais"
        android:textSize="24pt"
        android:background="@color/grape_compote"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/formLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicione seu lugar especial"
        android:textSize="14pt"
        android:background="@color/white"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/grape_compote"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerLocais" />

    <EditText
        android:id="@+id/tituloLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:textColorHint="@color/grape_compote"
        android:inputType="text"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formLocais"/>


    <EditText
        android:id="@+id/descricaoLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descricao"
        android:textColorHint="@color/grape_compote"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloLocais"/>

    <EditText
        android:id="@+id/dataLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hoje"
        android:textColorHint="@color/grape_compote"
        android:inputType="date"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descricaoLocais"/>

    <TextView
        android:id="@+id/lonlatLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="8pt"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dataLocais"/>

    <Button
        android:id="@+id/buttonLocais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salvar"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintCircleRadius="10pt"
        android:textSize="10pt"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>