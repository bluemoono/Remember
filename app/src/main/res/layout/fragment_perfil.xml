<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.perfilFragment">

    <TextView
        android:id="@+id/bannerPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember"
        android:textSize="24pt"
        android:background="@color/grape_compote"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/formPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FormulÃ¡rio de Cadastro"
        android:textSize="14pt"
        android:background="@color/white"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/grape_compote"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerPerfil" />

    <EditText
        android:id="@+id/nomePerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColorHint="@color/grape_compote"
        android:inputType="text"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formPerfil"/>


    <EditText
        android:id="@+id/emailPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/grape_compote"
        android:inputType="textEmailAddress"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomePerfil"/>

    <EditText
        android:id="@+id/senhaPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:textColorHint="@color/grape_compote"
        android:inputType="textPassword"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailPerfil"/>

    <Button
        android:id="@+id/buttonPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salvar"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintCircleRadius="10pt"
        android:textSize="10pt"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>